<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<DialogPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/10.0.2-internal" fx:controller="com.library.visual.members.AddMemberController">
<headerText>
    Add new member
</headerText>
<content>
    <GridPane hgap="10" vgap="10">
        <Label text="First Name::">
            <padding>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
            </padding>
        </Label>
        <TextField fx:id="firstNameField" GridPane.columnIndex="1">
            <padding>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
            </padding>
        </TextField>
        <Label text="Last Name:" GridPane.rowIndex="2">
            <padding>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
            </padding>
        </Label>
        <TextField fx:id="lastNameField" GridPane.columnIndex="1" GridPane.rowIndex="2">
            <padding>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
            </padding>
        </TextField>
        <Label text="Address:" GridPane.columnIndex="2">
            <padding>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
            </padding>
        </Label>
        <TextField fx:id="addressField" GridPane.columnIndex="3">
            <padding>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
            </padding>
        </TextField>
        <Label text="Phone Number:" GridPane.columnIndex="2" GridPane.rowIndex="2">
            <padding>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
            </padding>
        </Label>
        <Label text="Email:" GridPane.columnIndex="2" GridPane.rowIndex="3">
            <padding>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
            </padding>
        </Label>
        <TextField fx:id="phoneNumberField" GridPane.columnIndex="3" GridPane.rowIndex="2">
            <padding>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
            </padding>
        </TextField>
        <TextField fx:id="emailField" GridPane.columnIndex="3" GridPane.rowIndex="3">
            <padding>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
            </padding>
        </TextField>

    </GridPane>
</content>
</DialogPane>
